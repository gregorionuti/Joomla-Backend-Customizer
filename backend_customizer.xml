<?xml version="1.0" encoding="utf-8"?>
<extension version="4.0" type="plugin" group="system" method="upgrade">
    <identifier>plg://site/plg_backend_customizer</identifier>            
    <name>Backend Customizer</name>
	<author>Gregorio Nuti</author>
	<creationDate>Mar 2023</creationDate>
	<copyright>Copyright Gregorio Nuti 2014-2023</copyright>
	<version>1.0.0</version>
    <license>GNU General Public License version 2 or later</license>
	<description>Add custom CSS and JS code to Joomla backend.</description>
    <files>
        <filename plugin="backend_customizer">backend_customizer.php</filename>
        <filename>backend_customizer.xml</filename>
    </files>
    <config>
		<fields name="params">
			<fieldset name="basic">
				
				<field label="Custom CSS" name="backend-custom-css" type="textarea" rows="20" filter="raw" />
				
				<field label="Custom JS" name="backend-custom-js" type="textarea" rows="20" filter="raw" />
                
			</fieldset>
		</fields>
	</config>
</extension>
